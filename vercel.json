{
    "version": 2,
    "routes": [
      { "src": "/api/(.*)", "dest": "/server.js" },
      { "src": "/public/(.*)", "dest": "/public/$1" },
      { "handle": "filesystem" },
      { "src": "/(.*)", "dest": "/" }
    ],
    "builds": [
      { "src": "backend/**", "use": "@vercel/node" },
      { "src": "frontend/**", "use": "@vercel/next" }
    ]
  }
  