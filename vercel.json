{
  "version": 2,
  "builds": [
    {
      "src": "/backend/server.js",
      "use": "@vercel/node"
    },
    {
      "src": "/frontend/pages/**/*.js",
      "use": "@vercel/next/pages"
    },
    {
      "src": "/frontend",
      "use": "@vercel/next"
    },
    {
      "src": "/backend/public/.*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/backend/server.js"
    },
    {
      "src": "/backend/public/(.*)",
      "dest": "/backend/public/$1",
      "status": 200
    },
    {
      "src": "/_next/(.*)",
      "dest": "/_next/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/pages/$1"
    }
  ]
}